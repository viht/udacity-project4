{
    "scripts": {
        "frontend:install": "cd udagram/udagram-frontend && npm run ins",
        "frontend:lint": "cd udagram/udagram-frontend && npm run lint",
        "frontend:test": "cd udagram/udagram-frontend && npm run test",
        "frontend:build": "cd udagram/udagram-frontend && npm run build:prod",
        "frontend:deploy": "cd udagram/udagram-frontend && npm run deploy",
        "api:install": "cd udagram/udagram-api && npm run ins",
        "api:build": "cd udagram/udagram-api && npm run build",
        "api:deploy": "cd udagram/udagram-api && npm run deploy",
        "api:env": "cd udagram/udagram-api && npm run env",
        "deploy": "npm run api:deploy && npm run frontend:deploy"
    }
}
